{
  "name": "chat-app-node-server",
  "version": "2.0.0",
  "private": true,
  "main": "src/index.ts",
  "type": "module",
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^22.0.1",
    "@types/async-retry": "^1.4.8",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.17.4",
    "async-retry": "^1.3.3",
    "axios": "^1.7.3",
    "connect-mongo": "^5.1.0",
    "express": "^4.18.2",
    "express-session": "^1.17.2",
    "jsonwebtoken": "^9.0.1",
    "jwt-decode": "^4.0.0",
    "keycloak-connect": "^22.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^7.8.0",
    "openid-client": "^5.6.4",
    "passport": "^0.7.0",
    "passport-oauth2": "1.8.0",
    "passports": "^0.2.1"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.4",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^18.0.3",
    "@types/passport": "^1.0.16",
    "@types/passport-oauth2": "^1.4.15",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "dotenv": "^16.4.5",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.0.9",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js, ts, json, mjs",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "node --loader ts-node/esm ./src/index.ts",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www.js --trace-warnings",
    "dev": "set PORT=4001 NODE_ENV=development npm-run-all start",
    "prod": "NODE_ENV=production npm-run-all build server",
    "win-dev": "set PORT=4001&& set NODE_ENV=development&& npm run start",
    "win-prod": "set NODE_ENV=production&& npm-run-all build server",
    "transpile": "tsc --project ./",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon --exec npm run start",
    "watch:prod": "nodemon --exec npm run prod",
    "watch:win-dev": "nodemon --exec npm run win-dev",
    "test": "jest",
    "lint": "eslint --fix --ext .ts,.tsx ."
  }
}
